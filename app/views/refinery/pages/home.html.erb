<div class="sliderr parallax" data-stellar-background-ratio="0.9" style="background: url(<%= image_path('backgrounds/2.jpg') %>);">
  <ul id="co-slider" class="co-slider">
  <% @first = true %>  
  <% Refinery::Volumes::Volume.where("used_in_home = ?", true) .each do |volume| %>
    <% 
      @path = volume.pic.thumbnail("300x300c").url

      if @first == true 
        @display = "style=display:block;"
        @first = false
      else 
        @display = ""
      end
      if I18n.locale.to_s == 'en'
        view = "View"
        img = "Increase Image"
        @link_to_product = "/products/" + volume.product.id.to_s
      else
        view = "Посмотреть"
        img = "Увеличить Изображение"
        @link_to_product = "/ru/products/" + volume.product.id.to_s
      end
    %>

    <li class="co-item" <%= @display %>>
        <div class="co-circle" style="background-image: url(<%= @path %>);">      
          <div class="co-info-wrap">
            <div class="co-info">
              <div class="co-info-front" style="background-image: url(<%= @path %>);"></div>
              <div class="co-info-back">
                <a href="<%= @link_to_product %>"><%= view %></a>
                <a href="#"><%= img %></a>
              </div>  
            </div>
          </div>
        </div>
        <div class="co-shadow"></div>
        <div class="co-title"><h3><%= volume.product.name %></h3></div>
        <a class="co-link" href="<%= @link_to_product %>"><%= view %> <i class="mii icon-angle-right"></i></a>
      </li>
  <% end %>
    <nav>
      <a href="#" class="co-prev">Previous</a>
      <a href="#" class="co-next">Next</a>
    </nav>
  </ul>
</div>

<%=raw @page.content_for(:body) %>


