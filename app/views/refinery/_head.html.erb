<meta charset='<%= Rails.application.config.encoding %>' />
<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
<title><%= browser_title(yield(:title)) %></title>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
<meta name="description" content="Official - Premium Multi-purpose HTML5 Template">
<meta name="keywords" content="official, corporate, light, dark, themeforest, multi purpose, shop, magazine, premium">

<!-- Styles -->
  <%= stylesheet_link_tag 'bootstrap.min'%>
  <%= stylesheet_link_tag 'icons'%>
  <%= stylesheet_link_tag 'responsive'%>
  <link href='http://fonts.googleapis.com/css?family=Marcellus' rel='stylesheet' type='text/css'>
  <style>
    #footer {background: url(<%= image_path('background.jpg') %> repeat}
  </style><!-- Custom Styles -->

<!-- Circular -->
  <%= javascript_include_tag 'modernizr.custom.79639' %>
  <noscript>
    <%= stylesheet_link_tag 'circular/noJS', :media => nil%>
  </noscript>
<!-- Favicon -->
  <link rel="shortcut icon" href="<%= image_path('favicon.jpg') %>">
  <link rel="apple-touch-icon" href="<%= image_path('apple-touch-icon.html') %>">

<!--[if IE]>
  <meta http-equiv="X-UA-Compatible" content="IE=9; IE=8; IE=EmulateIE8; IE=EDGE" />
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <%= javascript_include_tag 'excanvas' %>
<![endif]-->

<%= raw %(<meta name="description" content="#{@meta.meta_description}" />) if @meta.meta_description.present? -%>
<%= raw %(<link rel="canonical" content="#{@canonical}" />) if @canonical.present? -%>
<%= csrf_meta_tags if Refinery::Core.authenticity_token_on_frontend -%>
<%= yield :meta %>

<%= stylesheet_link_tag "application" %>
<%= yield :stylesheets %>

<%= render '/refinery/google_analytics' %>

<%= javascript_include_tag 'modernizr-min' %>

