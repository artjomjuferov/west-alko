<div class="page-content">
  <div class="row clearfix mb">
    <div class="filterable">
      <ul class="filter">
        <%
          if I18n.locale.to_s == "en"
            @link_to_product = "/products"
            all = "All"
            vine = "Vine"
            vodka = "Vodka"
            whiskey = "Whiske"
          else
            @link_to_product = "/ru/products"
            all = "Все"
            vine = "Вино"
            vodka = "Водка"
            whiskey = "Виски"
          end

        %>
        <li><a href="<%= @link_to_product %>"><%= all %></a></li>
        <li><a href="<%= @link_to_product %>?alco=vine"><%= vine %></a></li>
        <li><a href="<%= @link_to_product %>?alco=whiskey"><%= whiskey %></a></li>
        <li><a href="<%= @link_to_product %>?alco=vodka"><%= vodka %></a></li>
      </ul>
    </div>
  </div>

<div class="row clearfix mbs">
  <div class="grid_12">

  <ul class="portfolio clearfix">
    <% @products.each do |product| %>
      <% 
        volume = Refinery::Volumes::Volume.find(:first, :conditions => ['product_id = ?', product.id])
        if volume != nil
          @link_to_product = "/" + I18n.locale.to_s + "/products/" + volume.product.id.to_s
          @link_to_img = volume.pic.thumbnail("300x300").url
        else
          @link_to_product = ""
          @link_to_img = ""
        end

      %>
      <li class="grid_3" data-type="digital">
        <div class="hover-fx">
          
          <% if volume != nil %>
            <img src="<%= @link_to_img %>" alt="#">
          <% end %>
          <a class="fRight" href="<%= @link_to_product %>"><span><i class="icon-eye-open"></i></span></a>
        </div>
        <div class="detailes">
          <h5> <a href="#"><%= product.name %></a> </h5>
          <a href="#"><%= product.alco_type.capitalize %></a>
        </div>
      <div>
      </li>
    <% end %>
  </ul>

  </div>
</div>
