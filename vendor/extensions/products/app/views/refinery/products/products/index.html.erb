<div class="page-content">
  <div class="row clearfix mb">
    <div class="filterable">
      <ul class="filter">
        <% which_alco_type_list.each do |key,value| %>
          <li>
            <%= link_to value, get_products.url, :alco => key %>    
          </li>
        <% end %>
      </ul>
    </div>
  </div>

<div class="row clearfix mbs">
  <div class="grid_12">

  <ul class="portfolio clearfix">
    <% @products.each do |product| %>
      <% volume = Refinery::Volumes::Volume.find(:first, :conditions => ['product_id = ?', product.id]) %>
      <li class="grid_3" data-type="digital">
        <div class="hover-fx">   
          <% if volume.pic != nil %>
            <img src="<%= volume.pic.thumbnail("300x300").url %>" alt="#">
          <% end %>
          <a class="fRight" href="<%= get_products.url %>/<%= volume.product.id %>"><span><i class="icon-eye-open"></i></span></a>
        </div>
        <div class="detailes">
          <h5> <a href="#"><%= product.name %></a> </h5>
          <a href="#"><%= "@which_alco_type_list[product.alco_type.to_sym]" %></a>
        </div>
      <div>
      </li>
    <% end %>
  </ul>

  </div>
</div>
