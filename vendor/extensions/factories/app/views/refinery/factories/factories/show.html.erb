<% content_for :body_content_title do %>
  <%= @factory.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @factory.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @factory.description %>
    </p>
  </section>
  <section>
    <h1>Description Short</h1>
    <p>
      <%=raw @factory.description_short %>
    </p>
  </section>
  <section>
    <h1>Title Image</h1>
    <p>
      <%= image_fu @factory.title_image, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="factories">
      <% @factories.each do |factory| %>
        <li>
          <%= link_to factory.name, refinery.factories_factory_path(factory) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
